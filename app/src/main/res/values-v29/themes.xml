<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Audire" parent="Theme.Material3Expressive.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:navigationBarDividerColor">@color/transparent</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="colorAboutTileBg">?attr/colorPrimary</item>
        <item name="colorAboutTileFg0">?attr/colorOnPrimary</item>
        <item name="colorAboutTileFg1">?attr/colorPrimaryContainer</item>
    </style>

    <style name="Base.Theme.Audire.MaterialAlertDialog" parent="ThemeOverlay.Material3Expressive.MaterialAlertDialog.Centered">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.Material3.HeadlineSmall</item>
    </style>

    <style name="Theme.Audire" parent="Base.Theme.Audire" />
</resources>
